<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<filter>
		<filter-name>com.samajackun.sunnysummer.web.i18n.LocaleI18nFilter</filter-name>
		<filter-class>com.samajackun.sunnysummer.web.i18n.LocaleI18nFilter</filter-class>
		<init-param>
			<param-name>root_path</param-name>
			<param-value>/</param-value>
		</init-param>
		<init-param>
			<param-name>input_pattern</param-name>
			<param-value>(.*)(\..*)</param-value>
		</init-param>
		<init-param>
			<param-name>output_pattern</param-name>
			<param-value>$1\${underscore_locale}$2</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>com.samajackun.sunnysummer.web.i18n.LocaleI18nFilter</filter-name>
		<url-pattern>*.xsl</url-pattern>
	</filter-mapping>
</web-app>